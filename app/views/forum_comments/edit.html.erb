
<% form_for :forum_comment, :url => { :action => "update", :id => @forum_comment.id } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :comment, t("forum_comment.comment") %><br />
    <%= f.text_area :comment %>
  </p>

  <br />
  
  <p>
    <%= f.submit t("menu.save"), :disable_with => t("menu.save") %>
  </p>
<% end %>

<br />
<br />

<span class="menu">
  <%= link_to t("menu.list"), { :action => "index", :forum_id => @forum_comment.forum_id } %>
</span>

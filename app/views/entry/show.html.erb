<% unless @user.blank? %>
  <table>
    <tr>
      <th align="left"><%= t("user.icon") %></th>
    </tr>
    
    <tr>
      <td align="left">
        <%= image_tag @user.icon, :size => t("user.icon_size"), :alt => t("user.icon_alt") %><br />
        <%= @user.icon %>
      </td>
    </tr>
  </table>
  
  <br />
  
  <table>
    <tr>
      <th align="left"><%= t("user.login_id") %></th>
      <td><%= @user.login_id %></td>
    </tr>
    
    <tr>
      <th align="left"><%= t("user.nickname") %></th>
      <td><%= @user.nickname %></td>
    </tr>
    
    <tr>
      <th align="left"><%= t("user.full_name") %></th>
      <td><%= @user.full_name %></td>
    </tr>
    
    <tr>
      <th align="left"><%= t("user.mail_address") %></th>
      <td><%= @user.mail_address %></td>
    </tr>

    <tr>
      <th align="left"><%= t("user.rank") %></th>
      <td><%= @user.rank %></td>
    </tr>
  </table>
  
  <br />
  
  <span class="menu">
    <%= link_to t("menu.top"), :root %>
    <%= link_to t("menu.edit"), { :action => "edit" } %>
    <%= link_to t("main_menu.profile"), { :controller => "profiles", :action => "show", :user_id => session[:user_id] } %>
  </span>
  
  <br />
<% else %>
  <span class="menu">
    <%= link_to t("menu.top"), :root %>
  </span>
<% end %>
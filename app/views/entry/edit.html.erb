<% unless @user.blank? %>
  
  <% form_for :user, :url => { :action => :update } do |f| %>
    <%= f.error_messages %>
  
    <%= f.label :login_id, "*ログインID" %>：<br />
    <%= f.text_field :login_id, :class => "input_field_width_200" %><br />
    
    <br />
    
    <%= f.label :password, "*現在のパスワード" %>：<br />
    <%= f.password_field :password, :class => "input_field_width_200" %><br />
    
    <br />
  
    <%= f.label :nickname, "ニックネーム" %>：<br />
    <%= f.text_field :nickname, :class => "input_field_width_200" %><br />
    
    <br />

    <%= f.label :full_name, "フルネーム" %>：<br />
    <%= f.text_field :full_name, :class => "input_field_width_200" %><br />
    
    <br />

    <%= f.label :icon, "アイコン" %>：<br />
    <%= f.text_field :icon, :class => "input_field_width_300" %><br />
    
    <br />

    <%= f.label :mail_address, "メールアドレス" %>：<br />
    <%= f.text_field :mail_address, :class => "input_field_width_200" %><br />
    
    <br />

    <%= f.label :rank, "ランク" %>：
    <%= f.select :rank, 0.upto(10) %><br />
    
    <br />

    <%= f.submit "変更", :disable_with => "変更" %><br />
    
    <br />
    
    <span class="menu"><%= link_to( "パスワード変更", { :action => :edit_password }, { :target => "_self" } ) %></span><br />
  <% end %>
  
  <br />
  <br />
  
  <span class="menu">
    <%= link_to t("menu.show"), { :action => :show } %>
    <%= link_to t("main_menu.profile"), { :controller => "profiles", :action => "show", :user_id => session[:user_id] } %>
  </span>

  <br />

<% else %>

  <span class="menu">
    <%= link_to t("menu.top"), :root %>
  </span>

<% end %>